<Window x:Class="EmployeeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF2068E6">
        <Image x:Name="image" Source="/Images/customer_login.png" HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="306" Margin="10,10,0,0"/>
        <TextBox x:Name="textusername" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Margin="321,121,0,0"/>
        <TextBox x:Name="textpassword" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Margin="321,164,0,0"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="364,218,0,0" VerticalAlignment="Top" Width="85" Background="#FF325AB0" Height="22" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="316,26,0,0" TextWrapping="Wrap" Text="LOGIN" VerticalAlignment="Top" Height="58" Width="160" FontSize="48" FontWeight="Bold"/>

    </Grid>
</Window>
